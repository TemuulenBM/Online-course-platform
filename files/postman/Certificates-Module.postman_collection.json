    {
      "name": "03. Certificates — CRUD",
      "item": [
        {
          "name": "My Certificates (STUDENT)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const res = pm.response.json();",
                  "pm.test('Status 200', () => pm.response.to.have.status(200));",
                  "pm.test('Has certificates', () => pm.expect(res.data.data).to.be.an('array'));",
                  "pm.test('Has pagination', () => {",
                  "  pm.expect(res.data).to.have.property('total');",
                  "  pm.expect(res.data).to.have.property('page');",
                  "  pm.expect(res.data).to.have.property('limit');",
                  "});",
                  "if (res.data.data && res.data.data.length > 0) {",
                  "  const cert = res.data.data[0];",
                  "  pm.collectionVariables.set('certificateId', cert.id);",
                  "  pm.collectionVariables.set('verificationCode', cert.verificationCode);",
                  "  pm.test('Certificate has PDF URL', () => pm.expect(cert.pdfUrl).to.be.a('string'));",
                  "  pm.test('Certificate has QR URL', () => pm.expect(cert.qrCodeUrl).to.be.a('string'));",
                  "  pm.test('Certificate number format OCP-YYYY-XXXXXXXX', () => pm.expect(cert.certificateNumber).to.match(/^OCP-\\d{4}-[A-F0-9]{8}$/));",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{studentToken}}" }],
            "url": {
              "raw": "{{baseUrl}}/certificates/my?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["certificates", "my"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "20" }
              ]
            }
          }
        },
        {
          "name": "Get Certificate by ID (STUDENT)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const res = pm.response.json();",
                  "pm.test('Status 200', () => pm.response.to.have.status(200));",
                  "pm.test('Has certificate data', () => {",
                  "  pm.expect(res.data).to.have.property('id');",
                  "  pm.expect(res.data).to.have.property('certificateNumber');",
                  "  pm.expect(res.data).to.have.property('pdfUrl');",
                  "  pm.expect(res.data).to.have.property('qrCodeUrl');",
                  "  pm.expect(res.data).to.have.property('verificationCode');",
                  "  pm.expect(res.data).to.have.property('userName');",
                  "  pm.expect(res.data).to.have.property('courseTitle');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{studentToken}}" }],
            "url": {
              "raw": "{{baseUrl}}/certificates/{{certificateId}}",
              "host": ["{{baseUrl}}"],
              "path": ["certificates", "{{certificateId}}"]
            }
          }
        },
        {
          "name": "Verify Certificate (PUBLIC)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const res = pm.response.json();",
                  "pm.test('Status 200', () => pm.response.to.have.status(200));",
                  "pm.test('Certificate verified', () => {",
                  "  pm.expect(res.data).to.have.property('certificateNumber');",
                  "  pm.expect(res.data).to.have.property('userName');",
                  "  pm.expect(res.data).to.have.property('courseTitle');",
                  "  pm.expect(res.data).to.have.property('issuedAt');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/certificates/verify/{{verificationCode}}",
              "host": ["{{baseUrl}}"],
              "path": ["certificates", "verify", "{{verificationCode}}"]
            }
          }
        },
        {
          "name": "Verify Certificate — Invalid Code (PUBLIC)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 404', () => pm.response.to.have.status(404));",
                  "const res = pm.response.json();",
                  "pm.test('Not found message', () => pm.expect(res.success).to.be.false);"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/certificates/verify/invalidcode12345678901234567890",
              "host": ["{{baseUrl}}"],
              "path": ["certificates", "verify", "invalidcode12345678901234567890"]
            }
          }
        },
        {
          "name": "Course Certificates (TEACHER)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const res = pm.response.json();",
                  "pm.test('Status 200', () => pm.response.to.have.status(200));",
                  "pm.test('Has certificates list', () => pm.expect(res.data.data).to.be.an('array'));",
                  "pm.test('Has pagination', () => {",
                  "  pm.expect(res.data).to.have.property('total');",
                  "  pm.expect(res.data).to.have.property('page');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{teacherToken}}" }],
            "url": {
              "raw": "{{baseUrl}}/certificates/course/{{courseId}}?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["certificates", "course", "{{courseId}}"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "20" }
              ]
            }
          }
        },
        {
          "name": "Generate Certificate Manually (STUDENT)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const res = pm.response.json();",
                  "if (res.success) {",
                  "  pm.test('Certificate generated', () => {",
                  "    pm.expect(res.data).to.have.property('id');",
                  "    pm.expect(res.data).to.have.property('certificateNumber');",
                  "    pm.expect(res.data).to.have.property('verificationCode');",
                  "  });",
                  "  pm.collectionVariables.set('certificateId', res.data.id);",
                  "} else {",
                  "  pm.test('Conflict or error', () => pm.expect(res.statusCode).to.be.oneOf([409, 400]));",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{studentToken}}" }],
            "url": {
              "raw": "{{baseUrl}}/certificates/generate/{{courseId}}",
              "host": ["{{baseUrl}}"],
              "path": ["certificates", "generate", "{{courseId}}"]
            }
          }
        },
        {
          "name": "Delete Certificate (ADMIN)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', () => pm.response.to.have.status(200));",
                  "const res = pm.response.json();",
                  "pm.test('Deleted successfully', () => pm.expect(res.success).to.be.true);"
                ]
              }
            }
          ],
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{adminToken}}" }],
            "url": {
              "raw": "{{baseUrl}}/certificates/{{certificateId}}",
              "host": ["{{baseUrl}}"],
              "path": ["certificates", "{{certificateId}}"]
            }
          }
        }
      ]
    },
