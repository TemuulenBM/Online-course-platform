          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"cert-student@test.com\",\n  \"password\": \"Test12345\",\n  \"firstName\": \"Certificate\",\n  \"lastName\": \"Student\"\n}"
            },
