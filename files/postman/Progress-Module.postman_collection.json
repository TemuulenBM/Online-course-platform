            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{teacherToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"courseId\": \"{{courseId}}\",\n  \"title\": \"Video Lesson 1\",\n  \"lessonType\": \"video\",\n  \"durationMinutes\": 30,\n  \"isPreview\": false\n}"
            },
            "url": { "raw": "{{baseUrl}}/lessons", "host": ["{{baseUrl}}"], "path": ["lessons"] }
