                  "pm.test('Has pagination', () => {",
                  "  pm.expect(res.data.data).to.be.an('array');",
                  "  pm.expect(res.data.total).to.be.at.least(1);",
                  "  pm.expect(res.data).to.have.property('page');",
                  "  pm.expect(res.data).to.have.property('limit');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{studentToken}}" }],
            "url": {
              "raw": "{{baseUrl}}/progress/my?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["progress", "my"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "20" }
              ]
            }
          }
        }
      ]
    },
    {
