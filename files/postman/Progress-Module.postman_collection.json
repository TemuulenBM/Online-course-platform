    {
      "name": "02. Progress — Update",
      "item": [
        {
          "name": "POST — Update lesson progress",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', () => pm.response.to.have.status(200));",
                  "const res = pm.response.json();",
                  "pm.test('Has progress data', () => {",
                  "  pm.expect(res.data.progressPercentage).to.eql(30);",
                  "  pm.expect(res.data.timeSpentSeconds).to.eql(120);",
                  "  pm.expect(res.data.completed).to.eql(false);",
                  "});",
                  "if (res.data) { pm.collectionVariables.set('progressId', res.data.id); }"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{studentToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"progressPercentage\": 30,\n  \"timeSpentSeconds\": 120\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/progress/lessons/{{videoLessonId}}",
              "host": ["{{baseUrl}}"],
              "path": ["progress", "lessons", "{{videoLessonId}}"]
            }
          }
        },
        {
          "name": "POST — Additive timeSpent",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', () => pm.response.to.have.status(200));",
                  "const res = pm.response.json();",
                  "pm.test('timeSpentSeconds is additive (180)', () => {",
                  "  pm.expect(res.data.timeSpentSeconds).to.eql(180);",
                  "});",
                  "pm.test('progressPercentage updated to 50', () => {",
                  "  pm.expect(res.data.progressPercentage).to.eql(50);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{studentToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"progressPercentage\": 50,\n  \"timeSpentSeconds\": 60\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/progress/lessons/{{videoLessonId}}",
              "host": ["{{baseUrl}}"],
              "path": ["progress", "lessons", "{{videoLessonId}}"]
            }
          }
        },
        {
          "name": "POST — Not enrolled (403)",
          "event": [
