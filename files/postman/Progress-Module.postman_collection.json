            "body": {
              "mode": "raw",
              "raw": "{\n  \"courseId\": \"{{courseId}}\",\n  \"title\": \"Text Lesson 1\",\n  \"lessonType\": \"text\",\n  \"durationMinutes\": 10,\n  \"isPreview\": false\n}"
            },
            "url": { "raw": "{{baseUrl}}/lessons", "host": ["{{baseUrl}}"], "path": ["lessons"] }
