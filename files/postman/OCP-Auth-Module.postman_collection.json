{
  "info": {
    "name": "OCP Auth Module",
    "description": "Online Course Platform — Auth Module API endpoints\n\nBase URL: http://localhost:3001/api/v1",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001/api/v1"
    },
    {
      "key": "accessToken",
      "value": ""
    },
    {
      "key": "refreshToken",
      "value": ""
    },
    {
      "key": "resetToken",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "1. Register",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "    const json = pm.response.json();",
              "    pm.collectionVariables.set('accessToken', json.accessToken);",
              "    pm.collectionVariables.set('refreshToken', json.refreshToken);",
              "    pm.test('Access token буцсан', () => pm.expect(json.accessToken).to.be.a('string'));",
              "    pm.test('Refresh token буцсан', () => pm.expect(json.refreshToken).to.be.a('string'));",
              "    pm.test('User мэдээлэл буцсан', () => {",
              "        pm.expect(json.user).to.have.property('id');",
              "        pm.expect(json.user).to.have.property('email');",
              "        pm.expect(json.user.role).to.eql('STUDENT');",
              "    });",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"firstName\": \"Бат\",\n  \"lastName\": \"Дорж\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "register"]
        }
      }
    },
    {
      "name": "2. Register — Давхардсан имэйл (409)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('409 Conflict буцсан', () => pm.response.to.have.status(409));",
              "pm.test('Монгол алдааны мессеж', () => {",
              "    pm.expect(pm.response.json().message).to.include('бүртгэлтэй');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"firstName\": \"Бат\",\n  \"lastName\": \"Дорж\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "register"]
        }
      }
    },
    {
      "name": "3. Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const json = pm.response.json();",
              "    pm.collectionVariables.set('accessToken', json.accessToken);",
              "    pm.collectionVariables.set('refreshToken', json.refreshToken);",
              "    pm.test('Access token буцсан', () => pm.expect(json.accessToken).to.be.a('string'));",
              "    pm.test('Refresh token буцсан', () => pm.expect(json.refreshToken).to.be.a('string'));",
              "    pm.test('User мэдээлэл буцсан', () => pm.expect(json.user.email).to.eql('test@example.com'));",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login"]
        }
      }
    },
    {
      "name": "4. Login — Буруу нууц үг (401)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('401 Unauthorized буцсан', () => pm.response.to.have.status(401));",
              "pm.test('User enumeration хамгаалалт', () => {",
              "    pm.expect(pm.response.json().message).to.eql('Имэйл эсвэл нууц үг буруу байна');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"wrongpassword\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login"]
        }
      }
    },
    {
      "name": "5. Me — Одоогийн хэрэглэгч (JWT)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const json = pm.response.json();",
              "    pm.test('User ID буцсан', () => pm.expect(json).to.have.property('id'));",
              "    pm.test('Email буцсан', () => pm.expect(json).to.have.property('email'));",
              "    pm.test('Role буцсан', () => pm.expect(json).to.have.property('role'));",
              "    pm.test('Password хэш байхгүй', () => pm.expect(json).to.not.have.property('passwordHash'));",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
        "url": {
          "raw": "{{baseUrl}}/auth/me",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "me"]
        }
      }
    },
    {
      "name": "6. Me — Token-гүй (401)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": ["pm.test('401 Unauthorized буцсан', () => pm.response.to.have.status(401));"],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/auth/me",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "me"]
        }
      }
    },
    {
      "name": "7. Refresh Token",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const json = pm.response.json();",
              "    pm.collectionVariables.set('accessToken', json.accessToken);",
              "    pm.collectionVariables.set('refreshToken', json.refreshToken);",
              "    pm.test('Шинэ access token буцсан', () => pm.expect(json.accessToken).to.be.a('string'));",
              "    pm.test('Шинэ refresh token буцсан', () => pm.expect(json.refreshToken).to.be.a('string'));",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/refresh",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "refresh"]
        }
      }
    },
    {
      "name": "8. Forgot Password",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('200 OK буцсан', () => pm.response.to.have.status(200));",
              "pm.test('Амжилттай мессеж', () => {",
              "    pm.expect(pm.response.json().message).to.include('имэйл бүртгэлтэй бол');",
              "});",
              "console.log('⚠️ Reset token-ийг сервер console-оос харна уу!');"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/forgot-password",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "forgot-password"]
        }
      }
    },
    {
      "name": "9. Reset Password",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    pm.test('Амжилттай мессеж', () => {",
              "        pm.expect(pm.response.json().message).to.include('амжилттай');",
              "    });",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"{{resetToken}}\",\n  \"password\": \"newpassword123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/reset-password",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "reset-password"]
        }
      }
    },
    {
      "name": "10. Logout",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('200 OK буцсан', () => pm.response.to.have.status(200));",
              "pm.test('Амжилттай гарлаа', () => {",
              "    pm.expect(pm.response.json().message).to.eql('Амжилттай гарлаа');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
        "url": {
          "raw": "{{baseUrl}}/auth/logout",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "logout"]
        }
      }
    },
    {
      "name": "11. Validation — Хоосон body (400)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('400 Bad Request буцсан', () => pm.response.to.have.status(400));",
              "pm.test('Validation алдаанууд буцсан', () => {",
              "    const json = pm.response.json();",
              "    pm.expect(json.message).to.be.an('array');",
              "    pm.expect(json.message.length).to.be.greaterThan(0);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "register"]
        }
      }
    }
  ]
}
